{
  "name": "@catalystsquad/ui-typescript-hello-app",
  "version": "1.0.0",
  "description": "Frontend app for the Catalyst Squad Hello World end to end workflow",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "lightmon shell -s rundev.sh -w .css,.html,.png,.svg,.jpg,.gif",
    "build": "tsc src/app.ts --module nodenext --outDir ./dist",
    "watch": "tsc src/app.ts --module nodenext --outDir ./dist --watch",
    "serve": "node devserver.js",
    "start": "node devserver.js",
    "devserve": "esbuild src/app.ts --bundle --sourcemap --target=chrome58,firefox57,safari11,edge16 --outdir=dist --watch --servedir=dist --minify",
    "test": "jest"
  },
  "keywords": [
    "helloworld",
    "minimalist",
    "vanilla",
    "typescript",
    "webcomponents"
  ],
  "author": "Catalyst Squad",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "connect": "^3.7.0",
    "http-proxy-middleware": "^2.0.6",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "live-server": "^1.1.0",
    "serve-static": "^1.15.0",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.3"
  }
}
