{
  "name": "@catalystsquad/ui-typescript-hello-app",
  "version": "1.0.0",
  "description": "Frontend app for the Catalyst Squad Hello World end to end workflow",
  "main": "dist/app.js",
  "scripts": {
    "build": "cp -a static/* dist/ && esbuild src/app.ts --bundle --sourcemap --target=chrome58,firefox57,safari11,edge16 --outdir=dist --minify",
    "dev": "lightmon shell -s rundev.sh -w .css,.html,.png,.svg,.jpg,.gif",
    "serve": "node esbuild.config.js",
    "devserve": "esbuild src/app.ts --bundle --sourcemap --target=chrome58,firefox57,safari11,edge16 --outdir=dist --watch --servedir=dist --minify",
    "start": "esbuild src/app.ts --bundle --sourcemap --target=chrome58,firefox57,safari11,edge16 --outdir=dist --watch --servedir=dist --minify",
    "test": "jest"
  },
  "keywords": [
    "helloworld",
    "minimalist",
    "esbuild",
    "vanilla",
    "typescript",
    "webcomponents"
  ],
  "author": "Catalyst Squad",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "esbuild": "^0.17.11",
    "esbuild-serve": "^1.0.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.0.5"
  }
}
